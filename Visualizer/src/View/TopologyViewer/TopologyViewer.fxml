<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<GridPane fx:id="rootElement" xmlns="http://javafx.com/javafx/8.0.112" xmlns:fx="http://javafx.com/fxml/1" fx:controller="View.TopologyViewer.TopologyViewerController">

    <children>
<GridPane fx:id="horizontalGrid" prefHeight="48.0">
    <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" prefWidth="200.0" />
        <ColumnConstraints hgrow="SOMETIMES" />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
    </rowConstraints>
    <children>
        <Button fx:id="loadModelButton" mnemonicParsing="false" onAction="#loadModel" prefWidth="200" text="Load Model" GridPane.halignment="CENTER" />
        <TextField fx:id="modelPathField" prefHeight="25.0" promptText="Model Path" GridPane.columnIndex="1" />
    </children>
</GridPane>
<TabPane fx:id="tabPane" GridPane.rowIndex="1">

   <tabs>
      <Tab closable="false" text="View Topology">
         <content>
            <GridPane fx:id="viewerGridPane" hgap="10" vgap="10">
               <columnConstraints>
                  <ColumnConstraints />
               </columnConstraints>
               <rowConstraints>
                  <RowConstraints />
                   <RowConstraints prefHeight="30.0" />
               </rowConstraints>
                     <children>
                         <Button fx:id="myBtn" onAction="#showTopology" prefWidth="200" text="Show Topology" GridPane.halignment="CENTER" GridPane.rowIndex="1">Knap</Button>
                        <TextArea fx:id="tempTopologyTextArea" prefHeight="200.0" prefWidth="200.0" promptText="Relations in Topology" GridPane.rowIndex="2" />
                     </children>
            </GridPane>
         </content>
      </Tab>
      <Tab closable="false" text="View Constants">
         <content>
            <GridPane>
               <columnConstraints>
                  <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
               </columnConstraints>
               <rowConstraints>
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
               </rowConstraints>
               <children>
                <TableView fx:id="constantsTable" prefHeight="665.0" prefWidth="769.0" GridPane.rowIndex="0">
                  <columns>
                    <TableColumn fx:id="columnName" prefWidth="150.0" text="Name" />
                    <TableColumn fx:id="columnValue" prefWidth="440.0" text="Value" />
                  </columns>
                </TableView>
               </children>
            </GridPane>
         </content></Tab>
   </tabs>
</TabPane>
    </children>
   <columnConstraints>
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints minHeight="50.0" />
      <RowConstraints />
      <RowConstraints />
   </rowConstraints>
</GridPane>
